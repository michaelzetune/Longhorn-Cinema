@using LonghornCinemaFinalProject.Models
@model RoleEditModel
@{
    ViewBag.Title = "Edit Role";
}

<h2>Edit Role: @Model.Role.Name</h2>

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <div class="panel panel-primary">
        <div class="panel-heading">Add To @Model.Role.Name</div>
        <table class="table table-striped">
            @if (Model.NonMembers.Count() == 0)
            {
                <tr>
                    <td colspan="3">All Users Are Members</td>
                </tr>
            }
            else
            {
                <tr>
                    <th>First Name</th>
                    <th>Email</th>
                    <th>Add to Role</th>
                </tr>
                foreach (AppUser user in Model.NonMembers)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">Remove from @Model.Role.Name</div>
        <table class="table table-striped">
            @if (Model.Members.Count() == 0)
            {
                <tr>
                    <td colspan="3">No Users Are Members</td>
                </tr>
            }
            else
            {
                <tr>
                    <th>First Name</th>
                    <th>Email</th>
                    <th>Remove From Role</th>
                </tr>
                foreach (AppUser user in Model.Members)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <button type="submit" class="btn btn-danger">Save</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-success" })
}





