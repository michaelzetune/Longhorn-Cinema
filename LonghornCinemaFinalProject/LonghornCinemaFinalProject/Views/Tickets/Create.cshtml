@model LonghornCinemaFinalProject.Models.Ticket
@using LonghornCinemaFinalProject.Models
@{
    ViewBag.Title = "Create";
}

<h2>Create Ticket</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Ticket</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*@Html.HiddenFor("ShowID", @ViewBag.ShowID)*@
    @Html.HiddenFor(model => model.Showing.ShowingID)

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Movie Title:
            </dt>
            <dd>
                @*@ViewBag.CurrentMovieTitle*@
                @Html.DisplayFor(m => Model.Showing.Movie.Title)
            </dd>
            <dt>
                Rating:
            </dt>
            <dd>
                @*@ViewBag.CurrentMovieRating*@
                @Html.DisplayFor(m => Model.Showing.Movie.MPAARating)
            </dd>
            <dt>
                Start Time:
            </dt>
            <dd>
                @*@ViewBag.CurrentTicketStartTime*@
                @Html.DisplayFor(m => Model.Showing.StartTime)
            </dd>
            <dt>
                Ticket Price:
            </dt>
            <dd>
                @*$@ViewBag.CurrentTicketPrice*@
                @*//TODO: Add a display attribute to your model class to format the price for you*@
                $@Html.DisplayFor(m => m.TicketPrice)
            </dd>
            <dd>
                @if (@ViewBag.Advance != "No Discount")
                {@ViewBag.Advance}
                <p></p>
                @if (@ViewBag.SeniorCitizen != "No Discount")
                {@ViewBag.SeniorCitizen}
            </dd>
        </dl>
    </div>
    <table class="table-bordered">
        <b>SCREEN</b>
        <tr>
            <td>A1</td>
            <td>A2</td>
            <td>A3</td>
            <td>A4</td>
            <td>A5</td>
            <td>A6</td>
            <td>A7</td>
            <td>A8</td>
        </tr>
        <tr>
            <td>B1</td>
            <td>B2</td>
            <td>B3</td>
            <td>B4</td>
            <td>B5</td>
            <td>B6</td>
            <td>B7</td>
            <td>B8</td>
        </tr>
        <tr>
            <td>C1</td>
            <td>C2</td>
            <td>C3</td>
            <td>C4</td>
            <td>C5</td>
            <td>C6</td>
            <td>C7</td>
            <td>C8</td>
        </tr>
        <tr>
            <td>D1</td>
            <td>D2</td>
            <td>D3</td>
            <td>D4</td>
            <td>D5</td>
            <td>D6</td>
            <td>D7</td>
            <td>D8</td>
        </tr>
    </table>
    <br />
    <div class="form-group">
        <label class="custom-control-label col-md-2">Seat</label>
        <div class="col-md-10">
            @Html.DropDownList("SelectedSeat", (SelectList)ViewBag.AllSeats, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>




}

<div>
    @Html.ActionLink("Back to List", "Index","Showings")
</div>

