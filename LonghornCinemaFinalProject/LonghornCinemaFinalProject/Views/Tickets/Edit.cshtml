@model LonghornCinemaFinalProject.Models.Ticket
@using LonghornCinemaFinalProject.Models

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
