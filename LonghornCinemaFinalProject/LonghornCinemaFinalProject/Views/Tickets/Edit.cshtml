            <td>@Html.DisplayFor(model => model.Showing.Movie.Title)</td>
            <td>@Html.DisplayFor(model => model.Showing.StartTime)</td>
            <td>@Html.DisplayFor(model => model.TicketPrice)</td>
        </tr>
    </table>
    <table class="table-bordered">
        <b>SCREEN</b>
