            <td>D7</td>
            <td>D8</td>
        </tr>
    </table>
    <br />
    <div class="form-group">
        <b>@Html.LabelFor(model => model.Seat, htmlAttributes: new { @class = "control-label col-md-2" })</b>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Seat, (SelectList)ViewBag.AllSeatsWithName, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Seat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
